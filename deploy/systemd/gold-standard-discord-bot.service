[Unit]
Description=Gold Standard Discord Bot
After=network.target

[Service]
Type=simple
User=adam
WorkingDirectory=/home/adam/worxpace/gold_standard
EnvironmentFile=/home/adam/worxpace/gold_standard/.env
# Ensure src directory on PYTHONPATH for 'digest_bot' package imports
Environment=PYTHONPATH=/home/adam/worxpace/gold_standard/src
ExecStart=/home/adam/worxpace/.venv/bin/python -m digest_bot.discord.bot_base
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
