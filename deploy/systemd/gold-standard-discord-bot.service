[Unit]
Description=Syndicate Discord Bot
After=network.target

[Service]
Type=simple
User=adam
WorkingDirectory=/home/adam/worxpace/syndicate
EnvironmentFile=/home/adam/worxpace/syndicate/.env
# Ensure src directory on PYTHONPATH for 'digest_bot' package imports
Environment=PYTHONPATH=/home/adam/worxpace/syndicate/src
ExecStart=/home/adam/worxpace/.venv/bin/python -m digest_bot.discord.bot_base
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
