[Unit]
Description=Gold Standard daily LLM operations report
After=network.target

[Service]
Type=oneshot
User=adam
WorkingDirectory=/home/adam/worxpace/gold_standard
EnvironmentFile=/home/adam/worxpace/gold_standard/.env
Environment=PYTHONPATH=/home/adam/worxpace/gold_standard/src
ExecStart=/home/adam/worxpace/.venv/bin/python -m digest_bot.daily_report

[Install]
WantedBy=multi-user.target
