[Unit]
Description=Gold Standard Weekly Cleanup
After=network-online.target docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/mnt/newdisk/gold_standard
EnvironmentFile=-/mnt/newdisk/gold_standard/gold_standard_config/.env
ExecStart=/usr/local/bin/gold-standard-weekly-cleanup.sh
StandardOutput=append:/var/log/gold_standard/cleanup.log
StandardError=append:/var/log/gold_standard/cleanup.err

[Install]
WantedBy=multi-user.target
